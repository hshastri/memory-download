{
  "name": "memory-download",
  "version": "1.5.4",
  "description": "Desktop application for downloading your Snapchat memories.",
  "license": "UNLICENSED",
  "author": {
    "name": "Christan Lisle",
    "email": "lisleachristian@gmail.com",
    "url": "https://www.cal-overflow.dev"
  },
  "main": "src/main.js",
  "scripts": {
    "dev": "DEBUG_MODE=true electron-forge start",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "postversion": "echo $npm_package_version > docs/version && git add package.json package-lock.json docs/version && git commit -m \"Bump version to ${npm_package_version}\"",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier check .",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "dayjs": "^1.11.2",
    "exiftool-vendored": "^16.4.0",
    "fs": "^0.0.1-security",
    "node-fetch": "^2.6.1",
    "video-stitch": "^1.7.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "electron": "^16.0.7",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "prettier": "2.6.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/public/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "memory-download"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32",
            "mas"
          ],
          "config": {
            "name": "memory-download"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "memory-download"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "memory-download"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ChristianLisle",
              "name": "memory-download"
            },
            "draft": false
          }
        }
      ]
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint ."
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
